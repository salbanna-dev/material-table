{
  "scripts": {
    "clean": "npm run clean --workspaces",
    "install:dev": "NODE_ENV=development npm install",
    "install:prod": "NODE_ENV=production npm install --omit=dev",
    "build:ui": "npm run build --workspace=@gws/shared-ui-components",
    "build:services": "npm run build --workspace=@gws/shared-nodejs",
    "publish:ui": "npm run build --workspace=@gws/shared-ui-components",
    "publish:services": "npm run build --workspace=@gws/shared-nodejs",
    "link:all": "npm link --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:ui": "npm run lint --workspace=@gws/shared-ui-components",
    "lint:services": "npm run lint --workspace=@gws/shared-nodejs",
    "diff": "git diff",
    "start": "npm run start --workspaces",
    "ui": "npm run start --workspace=@gws/shared-ui-components",
    "clear:cache": "npm cache clear --force",
    "clear:nodemodules": "rimraf node_modules && npm install",
    "postinstall": "node postinstall",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ]
}
