{
  "scripts": {
    "admin": "npm run start:dev --workspace=@prior-auth-gateway/admin",
    "clean": "npm run clean --workspaces",
    "install:dev": "set NODE_ENV=development && npm install",
    "install:prod": "set NODE_ENV=production && npm install -d",
    "build:external": "npm run build --workspace=@prior-auth-gateway/external",
    "build:common": "npm run build --workspace=@prior-auth-gateway/common",
    "build:services": "npm run build --workspace=@prior-auth-gateway/services",
    "external": "npm run start:dev --workspace=@prior-auth-gateway/ui",
    "services": "npm run start:dev --workspace=@prior-auth-gateway/services",
    "reports": "npm run start:dev --workspace=@prior-auth-gateway/reports",
    "cron": "npm run start:cron --workspace=@prior-auth-gateway/services",
    "link:all": "npm link --ignore-workspace-root-check",
    "lint": "npm run lint --workspaces",
    "lint:common": "npm run lint --workspace=@prior-auth-gateway/services/common",
    "lint:external": "npm run lint --workspace=@prior-auth-gateway/ui",
    "lint:services": "npm run lint --workspace=@prior-auth-gateway/services",
    "start": "npm run start --workspaces --if-present",
    "clear:cache": "npm cache clean --force",
    "clear:nodemodules": "npx rimraf node_modules",
    "bootstrap": "npm install",
    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "packages/admin",
      "packages/external",
      "packages/common",
      "packages/services",
      "packages/reports"
    ],
    "nohoist": [
      "**/@prior-auth-gateway/commonjs"
    ]
  }
}
