 "clean": "lerna run clean --parallel --stream",
    "build:external": "lerna run build --stream --scope=@poe-gateway-ui/external",
    "build:admin": "lerna run build --stream --scope=@poe-gateway-ui/admin",
    "build:common": "lerna run build --stream --scope=@poe-gateway-u/common",
    "build:services": "lerna run build --stream --scope=poe-gateway-services",
    "external": "lerna exec --scope @poe-gateway-ui/external -- npm run start:dev",
    "admin": "lerna exec --scope @poe-gateway-ui/admin -- npm run start:dev",
    "services": "lerna exec --scope poe-gateway-services -- npm run start:dev",
    "link:all": "lerna link --force-local",
    "lint": "lerna run lint --since HEAD --parallel --stream",
    "lint:common": "lerna run lint --stream --scope @poe-gateway-ui/common",
    "lint:external": "lerna run lint --stream --scope @poe-gateway-ui/external",
    "lint:admin": "lerna run lint --stream --scope @poe-gateway-ui/admin",
    "lint:services": "lerna run lint --stream --scope poe-gateway-services",
    "diff": "lerna diff",
    "start": "lerna run start --parallel --stream",
    "clear:cache": "npm cache clear --force",
    "clear:nodemodules": "npx lerna clean --yes"
